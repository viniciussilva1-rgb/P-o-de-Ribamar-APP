// Regras de segurança para desenvolvimento
// Permite acesso autenticado a todas as collections
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuário autenticado só pode ler/escrever seu próprio documento de perfil
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rotas: cada entregador pode criar/editar suas próprias rotas
    match /routes/{routeId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.resource.data.driverId == request.auth.uid;
    }

    // Clientes: admins podem gerenciar, drivers podem ler seus próprios
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // Produtos: todos autenticados podem ler, apenas admins podem escrever
    match /products/{productId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // Produção diária: todos autenticados podem ler/escrever
    match /production/{date}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Pagamentos e transações
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }

    // Entregadores: sincronização automática
    match /entregadores/{entregadorId} {
      allow read, write: if request.auth != null;
    }

    // Produção diária (coleção raiz)
    match /daily_production/{date} {
      allow read, write: if request.auth != null;
    }
  }
}
